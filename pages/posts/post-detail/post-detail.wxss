/* pages/posts/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column; 
}

.head-image {
  height: 460rpx;
  width: 100%;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.detail-user-info {
  flex-direction: row;
  margin-top: 10px;
}

.detail-image {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10px;
  vertical-align: middle;
  margin-right: 10px;
}
.detail-user-name {
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
  font-size: 30rpx;
}

.detail-user-at {
  margin-left: 20px;
  vertical-align: middle;
  color: #999;
  font-size: 24rpx;
}

.detail-user-time {
  margin-left: 10px;
  vertical-align: middle;
  color: #999;
  font-size: 24rpx;
}

.detail-title {
  margin-left: 40rpx;
  color: #4b556c;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  font-size: 36rpx;
}

.detail-share {
  margin-top: 20px;
}

.circle-image Image {
  width: 90rpx;
  height: 90rpx;
}

.circle-image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.detail-share-line {
  width: 660rpx;
  height: 1px;
  vertical-align: middle;
  background-color: #e5e5e5;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detial-share-image {
  margin-left: 30px;
}

.content {
  margin-left: 30px;
  margin-top: 20px;
  margin-right: 30px;
  margin-bottom: 20rpx;
  color: #666;
  line-height: 44rpx;
  letter-spacing: 2px;
}
